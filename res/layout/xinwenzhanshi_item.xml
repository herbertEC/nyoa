<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/zhuhe_list" 
    android:paddingBottom="3dip"
       
    android:paddingLeft="10dip"
    android:focusable="false"
    >
 
 
    <ImageView android:id="@+id/ItemImage_list"
        android:layout_marginTop="11dip"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginLeft="16dip"
    	 />
 
    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 
        <TextView android:id="@+id/title_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_title_focusno_color"
            android:textSize="21dip" />
        <TextView android:id="@+id/info_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:textSize="15dip"
            android:textColor="@color/list_info_focusno_color"/>
 
    </LinearLayout>
  	<ImageView android:id="@+id/arrow_list"
        android:layout_width="15dip"
        android:layout_height="21dip"
        android:layout_gravity="center" 
        android:layout_marginLeft="65dip"/>
</LinearLayout>